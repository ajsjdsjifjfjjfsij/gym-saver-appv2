rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Submissions collection rules
    match /submissions/{submissionId} {
      // Allow any authenticated user to create a submission
      allow create: if request.auth != null;
      
      // Only the admin can read, update, or delete submissions
      allow read, update, delete: if request.auth != null && request.auth.token.email == 'josephbunton@live.co.uk';
    }
    
    // Default rule: block everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
