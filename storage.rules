rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Submission images path
    match /submission-images/{userId}/{allPaths=**} {
      // Allow users to upload only to their own directory
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // Allow public read access to these images so the admin dashboard can display them
      // In a more secure setup, this would be restricted to the admin
      allow read: if true;
    }
    
    // Gym listings images path
    match /gym-listings/{allPaths=**} {
      // Allow public creation for guest gym listings
      allow create: if true;
      
      // Allow public read access so admin and app can display them
      allow read: if true;
    }

    // Default rule: block everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
